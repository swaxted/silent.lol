        }

        .rizz a {
            color: #8d8d8d;
            transition: color 2s ease;
        }

        .rizz a:hover {
            color: #c2c2c2;
        }

        * {
            user-select: none;
            -webkit-user-select: none;
        }

        .buy-desc {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1em;
        }

        .buy-desc p {
            color: #cccccc;
            margin: 0.5em 0;
            padding: 0.5em;
            background-color: #050505;
            border-radius: 5px;
            text-align: center;
        }

        .embed-box {
            display: flex;
            align-items: center;
            background-color: #050505;
            border-radius: 20px; /* Rounded corners */
            border: 2px solid #ffffff; /* White outline */
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.5);
            margin: 1em auto;
            padding: 0 1em;
